<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/statistics"
    tools:context=".StatFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="580px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="These statistics show the update of COVID-19 virus cases in Indonesia at Province Level"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:rowCount="1"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FFA000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Cases"
                        android:fontFamily="@font/lato_bolditalic"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:layout_marginStart="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="557.877"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#FFF"
                        android:layout_marginTop="10px"
                        android:textSize="25sp"
                        android:layout_marginStart="30px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#F00000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:fontFamily="@font/lato_bolditalic"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:layout_marginStart="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17.355"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#FFF"
                        android:layout_marginTop="10px"
                        android:textSize="25sp"
                        android:layout_marginStart="30px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:layout_marginStart="30px"
            android:layout_marginEnd="30px"
            android:rowCount="1"
            android:columnCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#51DD00">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovered"
                        android:fontFamily="@font/lato_bolditalic"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginStart="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="462.553"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:layout_marginStart="30px"
                        android:layout_marginTop="10px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#12BBD5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:fontFamily="@font/lato_bolditalic"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginStart="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="77.969"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:layout_marginStart="30px"
                        android:layout_marginTop="10px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#DBA700">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suspects"
                        android:fontFamily="@font/lato_bolditalic"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_marginStart="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69.027"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:layout_marginStart="30px"
                        android:layout_marginTop="10px"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update : 03 Desember 2020"
            android:layout_marginStart="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source          : covid19.go.id"
            android:layout_marginStart="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spread of Virus"
            android:layout_marginTop="30px"
            android:layout_marginStart="50px"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bolditalic"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map"/>

    </LinearLayout>

</LinearLayout>
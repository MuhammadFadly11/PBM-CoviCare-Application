<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@drawable/home">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_marginTop="580px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:rowCount="2"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/symptomsCard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#ACA5D7"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptoms"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/lato_bold"/>

                <ImageView
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/symptoms"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseCard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#ACA5D7"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercises"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/lato_bold"/>

                <ImageView
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/exercise"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/foodCard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#ACA5D7"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Foods"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/food"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/preventionCard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#ACA5D7"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preventions"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/lato_bold"/>

                <ImageView
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/prevention"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>

</RelativeLayout>
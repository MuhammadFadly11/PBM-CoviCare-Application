<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreventionActivity"
    android:orientation="vertical"
    android:background="@drawable/group_4206">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:layout_marginStart="80px"
        android:layout_marginTop="110px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preventions"
        android:layout_marginTop="150px"
        android:layout_marginStart="20px"
        android:layout_marginEnd="20px"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:rowCount="7"
            android:columnCount="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent1" />

                    <TextView
                        android:id="@+id/title_symp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avoid Close Contact"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/social_distance"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo"
                        android:layout_below="@id/title_symp"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent3" />

                    <TextView
                        android:id="@+id/title_symp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cover Coughs and Sneezes"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo1"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bersin"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo1"
                        android:layout_below="@id/title_symp1"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent4" />

                    <TextView
                        android:id="@+id/title_symp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay at Home"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo2"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rumah"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo2"
                        android:layout_below="@id/title_symp2"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent5" />

                    <TextView
                        android:id="@+id/title_symp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wash Your Hands Often"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo3"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cuci_baju"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo3"
                        android:layout_below="@id/title_symp3"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent7" />

                    <TextView
                        android:id="@+id/title_symp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wear a Face Mask"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo4"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topeng"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo4"
                        android:layout_below="@id/title_symp4"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent2" />

                    <TextView
                        android:id="@+id/title_symp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avoid Crowded Places"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo5"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crowded"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo5"
                        android:layout_below="@id/title_symp5"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logo6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prevent6" />

                    <TextView
                        android:id="@+id/title_symp6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanitize Constantly"
                        android:fontFamily="@font/lato_bold"
                        android:layout_toEndOf="@id/logo6"
                        android:layout_marginStart="30px"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sanitasi"
                        android:fontFamily="@font/lato_regular"
                        android:layout_toEndOf="@id/logo6"
                        android:layout_below="@id/title_symp6"
                        android:layout_marginStart="30px"
                        android:justificationMode="inter_word"
                        android:textSize="14sp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_item_id">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="2"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hospital" />

            <TextView
                android:id="@+id/namars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS Bhayangkara Tk. IR Said Sukanto"
                android:fontFamily="@font/lato_bold"
                android:layout_toEndOf="@id/logo"/>

            <TextView
                android:id="@+id/namaloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta Timur"
                android:fontFamily="@font/lato_regular"
                android:layout_toEndOf="@id/logo"
                android:layout_below="@id/namars"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : "
                android:fontFamily="@font/lato_regular"
                android:layout_below="@id/namaloc"
                android:layout_toEndOf="@id/logo"/>

            <TextView
                android:id="@+id/statusrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#00FF0A"
                android:fontFamily="@font/lato_bold"
                android:layout_toEndOf="@id/status"
                android:layout_below="@id/namaloc"/>

            <ImageView
                android:id="@+id/logocall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/namars"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>